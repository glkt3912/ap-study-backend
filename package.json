{
  "name": "ap-study-backend",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": "^22.17.1"
  },
  "imports": {
    "src/*": "./src/*",
    "tests/*": "./tests/*"
  },
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/app.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/app.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "test:coverage:html": "vitest run --coverage --reporter=html",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate --schema=src/infrastructure/database/prisma/schema.prisma",
    "db:push": "prisma db push --schema=src/infrastructure/database/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=src/infrastructure/database/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=src/infrastructure/database/prisma/schema.prisma",
    "seed": "tsx src/infrastructure/database/seeds/index.ts",
    "seed:questions": "tsx src/infrastructure/database/seeds/questions.ts",
    "seed:study-plan": "tsx src/infrastructure/database/seeds/study-plan.ts",
    "tdd:test": "npm test -- --reporter verbose",
    "tdd:cycle": "npm test && npm run lint:fix && npm run format && npm test",
    "tdd:coverage": "npm run test:coverage -- --reporter verbose",
    "tdd:watch": "npm run test:watch -- --reporter verbose",
    "quality:security": "./scripts/security-check.sh",
    "quality:database": "./scripts/database-check.sh",
    "quality:api": "./scripts/api-quality-check.sh",
    "quality:performance": "./scripts/performance-test.sh",
    "quality:docs": "./scripts/documentation-check.sh",
    "quality:all": "./scripts/pr-quality-check.sh all",
    "quality:critical": "./scripts/pr-quality-check.sh critical",
    "pr:collect-data": "./scripts/collect-pr-data.sh",
    "pr:claude": "./scripts/generate-pr-with-claude.sh"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@hono/node-server": "^1.18.0",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.0.2",
    "@hono/zod-validator": "^0.7.2",
    "@prisma/client": "^5.10.0",
    "@supabase/supabase-js": "^2.45.0",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "hono": "^4.0.0",
    "openapi3-ts": "^4.5.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2",
    "prisma": "^5.10.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  }
}
