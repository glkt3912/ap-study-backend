# ConoHa VPS 本番環境設定サンプル
# 実際の使用時は .env にコピーして値を変更

# 基本設定
NODE_ENV=production
PORT=8000
HOST=0.0.0.0

# データベース接続（VPS内PostgreSQL）
DATABASE_URL=postgresql://ap_study_user:YOUR_SECURE_PASSWORD@localhost:5432/ap_study

# CORS設定（Vercel フロントエンド）
ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-app-git-main-username.vercel.app

# セキュリティ（本番では強力なランダム値に変更）
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING
ENCRYPTION_KEY=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING

# ログ設定
LOG_LEVEL=info
LOG_FILE=/var/log/ap-study/app.log

# パフォーマンス設定
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# プロセス管理
CLUSTER_WORKERS=1
GRACEFUL_SHUTDOWN_TIMEOUT=10000

# PM2デプロイ設定
VPS_IP=YOUR_VPS_IP_ADDRESS
DEPLOY_USER=root
DEPLOY_REPO=https://github.com/YOUR_USERNAME/ap-study-project.git
DEPLOY_PATH=/var/www/ap-study