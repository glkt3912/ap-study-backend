# ConoHa VPS 本番環境設定

# 基本設定
NODE_ENV=production
PORT=8000
HOST=0.0.0.0

# データベース接続（VPS内PostgreSQL）
DATABASE_URL=postgresql://ap_study_user:secure_password_123@localhost:5432/ap_study

# CORS設定（Vercel フロントエンド）
ALLOWED_ORIGINS=https://ap-study-app.vercel.app,https://ap-study-app-git-main-username.vercel.app

# セキュリティ
JWT_SECRET=your-strong-jwt-secret-32-characters-long
SESSION_SECRET=your-strong-session-secret-32-chars
ENCRYPTION_KEY=your-32-character-encryption-key

# ログ設定
LOG_LEVEL=info
LOG_FILE=/var/log/ap-study/app.log

# パフォーマンス設定
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# プロセス管理
CLUSTER_WORKERS=1
GRACEFUL_SHUTDOWN_TIMEOUT=10000